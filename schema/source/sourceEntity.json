{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.veridu.com/1.0/schema/source/sourceEntity.json",
    "title": "Source",
    "type": "object",
    "properties": {
        "name": {
            "description": "Source Name",
            "type": "string",
            "pattern": "[a-z]+"
        },
        "tags": {
            "description": "Source information tags",
            "type": "array",
            "items": {
                "type": "object"
            },
            "minItems": 0,
            "uniqueItems": true
        },
        "created_at": {
            "description": "Source's creation unixtime",
            "type": ["integer", "null"]
        }
    },
    "required": [
        "name",
        "tags",
        "created_at",
        "updated_at"
    ]
}
