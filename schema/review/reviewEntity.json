{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.veridu.com/1.0/schema/user/reviewEntity.json",
    "title": "Review",
    "type": "object",
    "properties": {
        "positive": {
            "description": "Revies is positive",
            "type": "boolean"
        },
        "created_at": {
            "description": "Review's creation unixtime",
            "type": "integer"
        },
        "updated_at": {
            "description": "Review's last updated unixtime",
            "type": ["integer", "null"]
        }
    },
    "dependencies": {
        "slug": ["name"]
    },
    "required": [
        "positive",
        "created_at"
    ]
}
