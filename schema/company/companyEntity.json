{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.veridu.com/1.0/schema/company/companyEntity.json",
    "title": "Company",
    "type": "object",
    "properties": {
        "name": {
            "description": "Company Name",
            "type": "string",
            "pattern": ""
        },
        "slug": {
            "description": "Slug based on Company's name",
            "type": "string",
            "pattern": "[a-zA-Z0-9_-]+"
        },
        "public_key": {
            "description": "Public Key for management calls",
            "type": "string",
            "pattern": "[a-zA-Z0-9]{16}"
        },
        "created_at": {
            "description": "Company's creation unixtimestamp",
            "type": "integer"
        }
    },
    "dependencies": {
        "slug": ["name"]
    },
    "required": [
        "name",
        "slug",
        "public_key",
        "created_at"
    ]
}
