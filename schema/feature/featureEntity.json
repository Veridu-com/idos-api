{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.veridu.com/1.0/schema/user/featureEntity.json",
    "title": "Feature",
    "type": "object",
    "properties": {
        "name": {
            "description": "Feature Name",
            "type": "string",
            "pattern": ""
        },
        "creator": {
            "description": "Feature Creator",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Service Name",
                    "type": "string",
                    "pattern": ""
                }
            }
        },
        "type": {
            "description": "Feature Type",
            "type": "string",
            "pattern": ""
        },
        "value": {
            "description": "Feature value"
        },
        "source": {
            "description": "Source entity",
            "type": "string"
        },
        "created_at": {
            "description": "Feature's creation unixtime",
            "type": "integer"
        },
        "updated_at": {
            "description": "Feature's last update unixtime",
            "type": ["integer", "null"]
        }
    },
    "required": [
        "name",
        "creator",
        "type",
        "value",
        "created_at"
    ]
}
